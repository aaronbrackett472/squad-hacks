<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:columnCount="4"
    android:rowCount="13"
    android:layout_centerVertical="true">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Welcome_to_Odds_Are"
        android:layout_column="2"
        android:layout_row="1"
        android:textSize="35dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Enter_your_odds_here"
        android:inputType="text"
        android:clickable="true"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="25dp"
        android:id="@+id/enter_odds"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Submit_Odds"
        android:clickable="true"
        android:layout_row="3"
        android:layout_column="2"
        android:id="@+id/submit_odds"
        android:onClick="submit_odds"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_row="4"
        android:layout_column="2"
        android:text="@string/Current_Friend"
        android:textSize="40dp"
        android:id="@+id/current_friend"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/See_Friends"
        android:clickable="true"
        android:layout_row="5"
        android:layout_column="2"
        android:id="@+id/see_friends"
        android:onClick="see_friends"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Add_Friend"
        android:layout_row="6"
        android:layout_column="2"
        android:id="@+id/add_friend"
        />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/See_Active_Odds"
       android:layout_row="7"
       android:layout_column="2"
       android:id="@+id/see_active_odds"
       />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_row="8"
        android:layout_column="2"
        android:layout_rowSpan="3"/>

</GridLayout>

